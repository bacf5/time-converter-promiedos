{
  "manifest_version": 2,
  "name": "Automatic Time Converter for Promiedos",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "@extension-without-data-collection",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "description": "Changes the time from GMT-3 to CEST in the Promiedos.com.ar website for Argentinians living abroad.",

  "icons": {
    "48": "icons/clock-icon-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.promiedos.com.ar/*"],
      "js": ["time-converter.js"]
    }
  ]
}
